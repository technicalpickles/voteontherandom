%h1 Results of VOTE ON THE RANDOM!

%table
  %tr
    %th{:width => '33%'}
      = link_to_battle_side @battle, :left
    %th{:width => '33%'}
    %th{:width => '33%'}
      = link_to_battle_side @battle, :right

  %tr
    %td= link_to image_tag(@battle.the_randoms.left.image_filename), vote_battle_path(@battle, :side => 'left', :return_to => result_path(@battle)), :method => :post

    %th= result_chart(@battle)
    %td= link_to image_tag(@battle.the_randoms.right.image_filename), vote_battle_path(@battle, :side => 'right', :return_to => result_path(@battle)), :method => :post
